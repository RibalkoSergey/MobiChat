<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
        android:background="@drawable/login_page_background">


    <ImageView
            android:id="@+id/imViewPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/user_foto"
            android:layout_centerVertical="true">
    </ImageView>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First name:"
                android:textColor="#483C32"
                android:textStyle="bold">
        </TextView>

        <EditText
                android:id="@+id/edTxtFirstName"
                android:layout_height="40dp"
                android:hint="First name"
                android:layout_width="200dp">
        </EditText>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last name:"
                android:textColor="#483C32"
                android:textStyle="bold">
        </TextView>

        <EditText
                android:id="@+id/edTxtLastName"
                android:hint="Last name"
                android:layout_height="40dp"
                android:layout_width="200dp">
        </EditText>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="#483C32"
                android:textStyle="bold">
        </TextView>

        <EditText
                android:id="@+id/edTxtEmail"
                android:hint="Email"
                android:layout_height="40dp"
                android:layout_width="200dp">
        </EditText>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login:"
                android:textColor="#483C32"
                android:textStyle="bold">
        </TextView>

        <EditText
                android:id="@+id/edTxtLogin"
                android:hint="Login"
                android:layout_height="40dp"
                android:layout_width="160dp">
        </EditText>
    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textStyle="bold"
                android:textColor="#483C32">
        </TextView>

        <EditText
                android:id="@+id/editTxtPassword"
                android:hint="Password"
                android:layout_height="40dp"
                android:layout_width="160dp">
        </EditText>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <Button
                android:id="@+id/btnSignIn"
                android:layout_marginTop="0dp"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Sign in"
                android:background="@drawable/login_page_background">
        </Button>


    </LinearLayout>

</LinearLayout>

